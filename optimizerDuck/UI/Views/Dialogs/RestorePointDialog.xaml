<UserControl
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="optimizerDuck.UI.Views.Dialogs.RestorePointDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:optimizerDuck.Common.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <ui:TextBlock
                FontTypography="Body"
                HorizontalAlignment="Center"
                Text="{ext:Loc RestorePointDialog.Description}"
                TextWrapping="Wrap" />

            <Grid
                ColumnDefinitions="Auto,*"
                Margin="0,8,0,3"
                VerticalAlignment="Center">
                <ui:SymbolIcon
                    Filled="True"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Margin="0,0,5,0"
                    Symbol="QuestionCircle24" />
                <ui:TextBlock
                    FontTypography="BodyStrong"
                    Grid.Column="1"
                    Text="{ext:Loc RestorePointDialog.Help}"
                    TextWrapping="Wrap" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>